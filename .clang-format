# See Clang docs: http://clang.llvm.org/docs/ClangFormatStyleOptions.html
BasedOnStyle: Google

# Modern C++ standard
Standard: c++17

# Indent 2 spaces at a time (Google default)
IndentWidth: 2
TabWidth: 2
UseTab: Never

# Google uses 80, but 100 is reasonable for modern code
ColumnLimit: 100

# Google style: opening braces on same line
BreakBeforeBraces: Attach

# Indent case labels
IndentCaseLabels: true

# Left-align pointers and references (Google style)
PointerAlignment: Left

# Google style: minimal alignment
AlignOperands: Align
AlignConsecutiveAssignments: false

# Use 1 space negative offset for access modifiers (Google default)
AccessModifierOffset: -1

# Allow short inline functions (Google style)
AllowShortFunctionsOnASingleLine: Inline
AllowShortLoopsOnASingleLine: false
AllowShortCaseLabelsOnASingleLine: false
AllowShortIfStatementsOnASingleLine: Never

# No breaking after return type
AlwaysBreakAfterReturnType: None
AlwaysBreakAfterDefinitionReturnType: None

# Multi-line function parameters (more flexible than your old config)
AlignAfterOpenBracket: Align
BinPackParameters: true
AllowAllParametersOfDeclarationOnNextLine: true

# Google style spacing
KeepEmptyLinesAtTheStartOfBlocks: false

# Indent nested PP directives
IndentPPDirectives: AfterHash

# Include organization (Google style)
IncludeBlocks: Regroup
SortIncludes: CaseSensitive

# Modern C++ features
AlwaysBreakTemplateDeclarations: Yes
BreakConstructorInitializers: BeforeColon
ConstructorInitializerIndentWidth: 4

# Lambda formatting
AllowShortLambdasOnASingleLine: All
LambdaBodyIndentation: Signature

# Namespace handling
CompactNamespaces: false
FixNamespaceComments: true
